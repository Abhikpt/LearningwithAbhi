    private void UpdateClock()
    {
        currentTime = DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss");
        StateHasChanged();
    }

    private void AdjustValue(int change)
    {
        demoValue = Math.Clamp(demoValue + change, 0, 100);
    }

    private void ResetValue()
    {
        demoValue = 50;
    }

    private string GetValueDescription()
    {
        return demoValue switch
        {
            int n when n < 20 => "Just getting started with Blazor",
            int n when n < 40 => "Learning the fundamentals",
            int n when n < 60 => "Building interactive components",
            int n when n < 80 => "Creating complex applications",
            _ => "Mastering advanced Blazor concepts"
        };
    }

    private string GetValueColor()
    {
        return demoValue switch
        {
            int n when n < 20 => "#dc3545", // Red
            int n when n < 40 => "#fd7e14", // Orange
            int n when n < 60 => "#ffc107", // Yellow
            int n when n < 80 => "#0dcaf0", // Cyan
            _ => "#198754" // Green
        };
    }

    protected override void OnInitialized()
    {
        clockTimer = new Timer(1000);
        clockTimer.Elapsed += (sender, e) => InvokeAsync(UpdateClock);
        clockTimer.Start();
    }

    public void Dispose()
    {
        clockTimer?.Dispose();
    }
